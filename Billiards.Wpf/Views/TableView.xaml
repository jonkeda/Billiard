<UserControl x:Class="Billiard.views.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Billiard.views"
             xmlns:viewModel="clr-namespace:Billiard.viewModels"
             d:DataContext="{d:DesignInstance IsDesignTimeCreatable=false, Type={x:Type viewModel:TableViewModel}}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
        <Canvas Width="{Binding Length}" Height="{Binding Width}">
            <Image Width="{Binding Length}" Height="{Binding Width}" 
                   Source="{Binding BackGroundImage}"
                   Stretch="None" />

            <Image Width="{Binding Length}" Height="{Binding Width}" 
                   Source="{Binding SolutionsImage}"
                   Stretch="None" />

            <Image Width="{Binding Length}" Height="{Binding Width}" 
                   Source="{Binding Output}"
                   Stretch="None" />
        </Canvas>

        <local:VideoDeviceView DataContext="{Binding VideoDevice}" />

</Grid>

</UserControl>
